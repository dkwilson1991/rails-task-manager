<div class="container d-flex justify-content-center">
  <div class="card p-5 w-50">
    <div class="card-header">
      <h1 class="text-center">Show details</h1>
        <div class="card-body">
          <h3 class="text-center">Title: <%= @task.title %></h3>
          <p class="text-center"><%= @task.details %></p>
          <div class="d-flex justify-space-between align-items-center">
            <i class="fa-regular fa-pen-to-square"></i><%= link_to 'Edit Task', edit_task_path, class: 'btn btn-light' %>
            <%= link_to task_path(@task), data: { turbo_method: "delete", turbo_confirm: "Delete #{@task.title}?"}, class: "btn btn-light" do %>
            <i class="fa-solid fa-trash"></i>
            <% end %>
            <%= link_to 'Back to list', tasks_path, class: 'btn btn-light' %>
          </div>
        </div>
    </div>
  </div>
</div>
